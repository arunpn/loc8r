extends layout

block content
  .container
    .row.page-header
      h1
        | Review StarCups
    .row
      .col-xs-12.col-md-6
        form.form-horizontal(action="/location", method="get",role="form")
          .form-group
            label.col-xs-10.col-sm-2.control-label(for="name") Name
            col-xs-12.col-sm-10
              input#name.form-control(type="text",placeholder="Enter your name")
          .form-group
            label.col-xs-10.col-sm-2.control-label(for="rating") Rating
            col-xs-12.col-sm-10
              select#rating.form-control
                option 5
                option 4
                option 3
                option 2
                option 1

          .form-group
            label.col-xs-10.col-sm-2.control-label(for="review") Review
            col-xs-12.col-sm-10
              textarea#name.form-control(cols=20,rows=10,placeholder="Enter your Review")
          button.btn.btn-default.pull-right Add My Review
